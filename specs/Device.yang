        leaf UserNumberOfEntries {
            type uint32;
            config false;
            default 0;
            description "Number of entries in the User table.";
        }

        leaf SmartCardReaderNumberOfEntries {
            type uint32;
            config false;
            default 0;
            description "Number of entries in the SmartCardReader table.";
        }

