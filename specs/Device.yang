';

    revision "2013-09-22" {
        description "Version 0.1.0 -- Initial release";
    }

    container Device {

        leaf InterfaceStackNumberOfEntries {
            type uint32;
            config false;
            default 0;
            description "The number of entries in the InterfaceStack  table.";
